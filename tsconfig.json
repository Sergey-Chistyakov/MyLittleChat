{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "node",
    "sourceMap": false,
    "noEmitOnError": true,
    "noEmit": true,
    "strictNullChecks": true,
    "jsx": "react",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
  },
  "exclude": [
    "webpack.config.js", "_server"
  ],

  "baseUrl": ".",
  "paths": {
    "@modules/*": ["src/modules/*"],
    "*": ["node_modules/*"]
  },
}